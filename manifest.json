{
  "name": "URL二维码",
  "version": "1.0",
  "manifest_version": 2,
  "description": "把当前的网址或者其它内容生成二维码,可以直接用手机扫描阅读.",
  "browser_action": {
    "default_icon": "img/icon_48.png",
    "default_popup": "index.html"
  },
  "icons":{
    "16":"img/icon_48.png",
    "48":"img/icon_48.png",
    "128":"img/icon_128.png"
  },  
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": ["js/background.js"]
  }
}